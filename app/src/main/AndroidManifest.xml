<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kyshi.finding_lost_kid_application">


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.kyshi.finding_lost_kids_application.Finding_Kid_Location_Activity"
            android:label="@string/title_activity_finding__kid__location_"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.kyshi.finding_lost_kids_application.Kid_Photo_Upload_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.kyshi.finding_lost_kids_application.User_Home_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.kyshi.finding_lost_kids_application.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.example.kyshi.finding_lost_kids_application.Kid_Photo_Upload_Activity.fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:resource="@xml/file_path"
                android:name="android.support.FILE_PROVIDER_PATHS" />
        </provider>

    </application>

</manifest>