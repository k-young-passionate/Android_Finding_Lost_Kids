<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="parent"
    tools:context="com.example.kyshi.finding_lost_kids_application.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Search"
            android:layout_centerHorizontal="true"
            android:text="현재 이용"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="65dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="107dp"
            android:text="최근 이용"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="65dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Search"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:text="매장 찾기"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="6dp" />

        <Button
            android:id="@+id/Search"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/loc_text"
            android:text="Search"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="2dp" />

        <ListView
            android:id="@+id/recent_list"
            android:layout_width="308dp"
            android:layout_height="208dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="12dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="105dp" />

        <EditText
            android:id="@+id/loc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint = "현재 장소 입력"/>

        <TextView
            android:id="@+id/cur_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="0dp"
            android:text="없음"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="92dp"
            android:layout_marginStart="-26dp"
            android:layout_toEndOf="@+id/Search"
            app:srcCompat="@android:drawable/ic_menu_send" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="410dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="152dp">

        <Button
            android:id="@+id/register"
            android:layout_width="188dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:text="아이 정보 등록" />

        <Button
            android:id="@+id/registered"
            android:layout_width="188dp"
            android:layout_height="78dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="등록된 아이" />

        <Button
            android:id="@+id/exit"
            android:layout_width="188dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="종료" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
